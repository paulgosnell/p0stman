{
  "typography": {
    "fontFamilies": {
      "display": "'SF Pro Display', -apple-system, BlinkMacSystemFont, system-ui, sans-serif",
      "text": "'SF Pro Text', -apple-system, BlinkMacSystemFont, system-ui, sans-serif", 
      "rounded": "'SF Pro Rounded', -apple-system, BlinkMacSystemFont, system-ui, sans-serif",
      "mono": "'SF Mono', ui-monospace, 'Cascadia Code', 'Roboto Mono', Consolas, monospace",
      "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
    },
    "fontWeights": {
      "light": 300,
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem", 
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem",
      "7xl": "4.5rem"
    },
    "lineHeights": {
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },
    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em", 
      "normal": "0em",
      "wide": "0.025em",
      "wider": "0.05em",
      "widest": "0.1em"
    },
    "scales": {
      "hero": {
        "fontSize": "clamp(3.5rem, 8vw, 8rem)",
        "fontWeight": 200,
        "lineHeight": 0.95,
        "letterSpacing": "-0.04em",
        "fontFamily": "display"
      },
      "display": {
        "fontSize": "clamp(2.5rem, 6vw, 6rem)",
        "fontWeight": 300,
        "lineHeight": 1.0,
        "letterSpacing": "-0.035em",
        "fontFamily": "display"
      },
      "headline": {
        "fontSize": "clamp(2rem, 4vw, 4rem)",
        "fontWeight": 400,
        "lineHeight": 1.1,
        "letterSpacing": "-0.03em",
        "fontFamily": "display"
      },
      "title1": {
        "fontSize": "clamp(1.75rem, 3vw, 2.5rem)",
        "fontWeight": 500,
        "lineHeight": 1.15,
        "letterSpacing": "-0.025em",
        "fontFamily": "display"
      },
      "title2": {
        "fontSize": "clamp(1.5rem, 2.5vw, 2rem)",
        "fontWeight": 500,
        "lineHeight": 1.2,
        "letterSpacing": "-0.02em",
        "fontFamily": "text"
      },
      "title3": {
        "fontSize": "clamp(1.25rem, 2vw, 1.5rem)",
        "fontWeight": 600,
        "lineHeight": 1.25,
        "letterSpacing": "-0.015em",
        "fontFamily": "text"
      },
      "subtitle": {
        "fontSize": "clamp(1.125rem, 1.5vw, 1.25rem)",
        "fontWeight": 500,
        "lineHeight": 1.3,
        "letterSpacing": "-0.01em",
        "fontFamily": "text"
      },
      "body": {
        "fontSize": "1rem",
        "fontWeight": 400,
        "lineHeight": 1.7,
        "letterSpacing": "0em",
        "fontFamily": "text"
      },
      "bodyEmphasized": {
        "fontSize": "1rem",
        "fontWeight": 500,
        "lineHeight": 1.6,
        "letterSpacing": "0em",
        "fontFamily": "text"
      },
      "callout": {
        "fontSize": "1.125rem",
        "fontWeight": 400,
        "lineHeight": 1.6,
        "letterSpacing": "-0.005em",
        "fontFamily": "text"
      },
      "subheadline": {
        "fontSize": "0.9375rem",
        "fontWeight": 500,
        "lineHeight": 1.4,
        "letterSpacing": "0.005em",
        "fontFamily": "text"
      },
      "footnote": {
        "fontSize": "0.8125rem",
        "fontWeight": 400,
        "lineHeight": 1.4,
        "letterSpacing": "0.01em",
        "fontFamily": "text"
      },
      "caption1": {
        "fontSize": "0.75rem",
        "fontWeight": 500,
        "lineHeight": 1.3,
        "letterSpacing": "0.015em",
        "fontFamily": "text"
      },
      "caption2": {
        "fontSize": "0.6875rem",
        "fontWeight": 600,
        "lineHeight": 1.2,
        "letterSpacing": "0.02em",
        "fontFamily": "text"
      }
    }
  }
}