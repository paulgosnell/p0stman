                                <span>12 products</span>
                            </div>
                            <div class="category-stat">
                                <i data-lucide="star"></i>
                                <span>4.1 avg rating</span>
                            </div>
                        </div>
                    </div>
                </article>

                <!-- Menopause -->
                <article class="category-card category-card--live" data-category="supplements" onclick="location.href='topics/menopause.html'">
